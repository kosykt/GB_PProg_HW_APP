<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_bottom_nav_view_style" parent="">
        <item name="android:background">@color/secondaryLightColor</item>
    </style>

    <style name="translator_view_style" parent="">
        <item name="android:background">@color/secondaryBackgroundColor</item>
        <item name="android:layout_marginTop">@dimen/translator_constraint_layout_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/translator_constraint_layout_margin</item>
    </style>

    <style name="translator_cv_input_style" parent="">
        <item name="android:backgroundTint">@color/secondaryLightColor</item>
        <item name="android:elevation">@dimen/translator_cv_elevation</item>
        <item name="cardCornerRadius">@dimen/translator_cv_card_corner_radius</item>
    </style>

    <style name="translator_til_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/translator_til_layout_margin</item>
        <item name="android:hint">@string/translator_til_hint_text</item>
        <item name="android:padding">@dimen/translator_til_padding</item>
        <item name="counterEnabled">true</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconMode">clear_text</item>
        <!--Drawables-->
        <item name="counterMaxLength">@integer/translator_til_input_max_counter</item>
        <item name="placeholderText">@string/translator_til_place_holder_text</item>
        <!--Colors-->
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="boxStrokeColor">@color/secondaryTextColor</item>
        <item name="counterTextColor">@color/secondaryTextColor</item>
        <item name="hintTextColor">@color/secondaryTextColor</item>
        <item name="endIconTint">@color/secondaryTextColor</item>
        <item name="startIconTint">@color/secondaryTextColor</item>
    </style>

    <style name="translator_tiet_style" parent="">
        <item name="android:backgroundTintMode">screen</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">@integer/translator_tiet_input_max_counter</item>
    </style>

    <style name="translator_item_cv_style" parent="">
        <item name="android:backgroundTint">@color/secondaryLightColor</item>
        <item name="android:layout_marginStart">@dimen/translator_item_card_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/translator_item_card_margin_start_end</item>
        <item name="android:elevation">@dimen/translator_item_card_elevation</item>
        <item name="cardCornerRadius">@dimen/translator_item_card_corner_radius</item>
    </style>

    <style name="translator_item_tv_translate_style" parent="">
        <item name="android:layout_margin">@dimen/translator_item_tv_margin</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/translator_item_tv_translate_text_size</item>
    </style>

    <style name="translator_item_tv_note_style" parent="">
        <item name="android:layout_marginStart">@dimen/translator_item_tv_margin</item>
        <item name="android:layout_marginEnd">@dimen/translator_item_tv_margin</item>
        <item name="android:layout_marginBottom">@dimen/translator_item_tv_margin</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/translator_item_tv_note_text_size</item>
    </style>

</resources>