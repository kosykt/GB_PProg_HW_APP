<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attrTranslatorItemCv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/translator_item_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            tools:src="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/translator_item_tv_translate"
                style="?attr/attrTranslatorItemTvTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Test text" />

            <TextView
                android:id="@+id/translator_item_tv_note"
                style="@style/translator_item_tv_note_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="asdasf"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>