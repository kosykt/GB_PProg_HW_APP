<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attrFfView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.translatorfragment.TranslatorFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/ff_cv_input"
        style="?attr/attrFfCvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ff_cv_response"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ff_til"
            style="?attrFfTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ff_tiet"
                style="?attrFfTiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ff_cv_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/ff_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ff_cv_input">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            tools:text="QWERTY" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ff_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ff_cv_response"
        app:layout_constraintVertical_chainStyle="packed"
        tools:listitem="@layout/ff_item" />

    <ImageView
        android:id="@+id/ff_loading_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/loading_animation"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ff_rv"
        app:layout_constraintEnd_toEndOf="@id/ff_rv"
        app:layout_constraintStart_toStartOf="@id/ff_rv"
        app:layout_constraintTop_toTopOf="@id/ff_rv"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>