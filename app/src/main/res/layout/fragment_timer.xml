<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.timerfragment.TimerFragment">

    <TextView
        android:id="@+id/ft_timer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#BF000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ft_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Start"
        android:textColor="#BF000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/ft_pause_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ft_timer_tv" />

    <Button
        android:id="@+id/ft_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Pause"
        android:textColor="#BF000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/ft_stop_btn"
        app:layout_constraintStart_toEndOf="@id/ft_start_btn"
        app:layout_constraintTop_toBottomOf="@id/ft_timer_tv" />

    <Button
        android:id="@+id/ft_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Stop"
        android:textColor="#BF000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ft_pause_btn"
        app:layout_constraintTop_toBottomOf="@id/ft_timer_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>