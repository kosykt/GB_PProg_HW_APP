<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/translatorFragment">

    <fragment
        android:id="@+id/translatorFragment"
        android:name="com.example.gb_pprog.presentation.translatorfragment.TranslatorFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_translator" >
        <action
            android:id="@+id/action_translatorFragment_to_timerFragment"
            app:destination="@id/timerFragment"
            app:popUpTo="@id/translatorFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_translatorFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/translatorFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_translatorFragment_to_myFirstTestFragment"
            app:destination="@id/myFirstTestFragment"
            app:popUpTo="@id/translatorFragment"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.gb_pprog.mytimer.TimerFragment"
        android:label="fragment_timer"
        tools:layout="@layout/fragment_timer" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.gb_pprog.presentation.favoritefragment.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/myFirstTestFragment"
        android:name="com.example.myfirsttest.presentation.MyFirstTestFragment"
        android:label="MyFirstTestFragment"
        tools:layout="@layout/fragment_my_first_test"/>
</navigation>